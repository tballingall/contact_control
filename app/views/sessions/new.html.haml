%h2= t('user.login.title')
#new-session
  = form_tag sessions_path, method: :post do
    .field
      = label_tag :email, t('user.fields.email')
      = text_field_tag :email, @user.email
    .field
      = label_tag :password, t('user.fields.password')
      = password_field_tag :password
    .actions
      = submit_tag t('user.fields.login')
